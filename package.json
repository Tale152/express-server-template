{
  "name": "express-server-template",
  "version": "1.0.0",
  "main": "build/index.js",
  "scripts": {
    "mongo:start": "node mongo-rs.js start",
    "mongo:stop": "node mongo-rs.js stop",
    "start": "node build/index.js",
    "build": "tsoa spec && tsc",
    "dev": "tsoa spec && nodemon src/index.ts",
    "analyze": "npx eslint ./src",
    "fix": "npx eslint ./src --fix",
    "cpd": "npx jscpd ./src",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.0",
    "express-winston": "^4.2.0",
    "helmet": "^8.0.0",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongodb": "^4.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.15.3",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "jscpd": "^4.0.5",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console",
      "json"
    ],
    "mode": "strict",
    "minLines": 10,
    "minTokens": 50,
    "output": "./cpd-report"
  }
}
